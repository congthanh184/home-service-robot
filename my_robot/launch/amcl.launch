<launch>
  <arg name="map_file" default="$(find my_robot)/maps/map.yaml"></arg>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"></node>

  <node name="amcl" pkg="amcl" type="amcl" output="screen">
    <remap from="scan" to="/scan"></remap>
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>

    <param name="transform_tolerance" value="0.2"/>

    <param name="max_particles" value="3000"/>
    <param name="min_particles" value="300"/>
    <param name="update_min_d" value="0.05"/>
    <param name="update_min_a" value="0.1"/>

    <param name="laser_min_range" value="0.2"/>
    <param name="laser_max_range" value="29"/>
    <param name="laser_max_beam" value="15"/>

    <param name="laser_z_hit" value="0.95"/>
    <param name="laser_z_rand" value="0.05"/>

    <param name="initial_pose_x" value="0.05"/>
    <param name="initial_pose_y" value="0.05"/>
    <param name="initial_pose_a" value="3.14159"/>
  </node>

  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <remap from="scan" to="my_robot/laser/scan"></remap>
    <param name="base_global_planner" value="navfn/NavfnROS"/>
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    <rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find my_robot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find my_robot)/config/global_costmap_params.yaml" command="load" /> <rosparam file="$(find my_robot)/config/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
